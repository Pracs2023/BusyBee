<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_funNlearn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="20dp"
            android:text="Fun &amp; Learn"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/aclonica"/>
        <View
            android:id="@+id/view_funNlearn"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_funNlearn"
            android:background="#423E3E"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_01"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#EFABC2"
            app:cardCornerRadius="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" >
            <LinearLayout
                android:id="@+id/ll_solarSystem"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/solarsystem"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:text="Solar System"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_02"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#DDD9B0"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_03"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:backgroundTint="#A4E8E2"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_01"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/sciencequiz"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:text="Science Quiz"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_04"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#FADE8C"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_02"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/mathsquiz"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:text="Maths Quiz"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_05"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:backgroundTint="#8C9C9E"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_03"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_06"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#9FB58D"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_04"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_07"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="25dp"
            android:backgroundTint="#E8C0A2"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_05"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_08"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#BAA29A"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_06"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="200dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>