<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_01"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:background="#E91E63"
            app:cardCornerRadius="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_02"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#80DEEA"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_03"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:background="#009688"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_01"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_04"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="#4CAF50"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_02"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_05"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:background="#00BCD4"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_03"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_06"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="#76FF03"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_04"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_07"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="25dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_05"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_08"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="#FF3D00"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_06"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="200dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>